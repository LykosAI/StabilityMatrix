<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:SpacedGridControl.Avalonia;assembly=SpacedGridControl.Avalonia"
    xmlns:controls="using:StabilityMatrix.Avalonia.Controls"
    xmlns:input="clr-namespace:FluentAvalonia.UI.Input;assembly=FluentAvalonia"
    xmlns:lang="clr-namespace:StabilityMatrix.Avalonia.Languages"
    xmlns:mocks="clr-namespace:StabilityMatrix.Avalonia.DesignData"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:vmDialogs="clr-namespace:StabilityMatrix.Avalonia.ViewModels.Dialogs"
    xmlns:vmInference="using:StabilityMatrix.Avalonia.ViewModels.Inference"
    x:DataType="vmInference:FaceDetailerViewModel">
    <Design.PreviewWith>
        <controls:FaceDetailerCard Width="300" />
    </Design.PreviewWith>

    <Style Selector="controls|FaceDetailerCard">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <!--  Ultralytics Models  -->
                    <TextBlock VerticalAlignment="Center" Text="BBox Model" />
                    <controls:BetterComboBox
                        Margin="4,4,4,8"
                        Padding="8,6,4,6"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding ClientManager.UltralyticsModels}"
                        SelectedItem="{Binding BboxModel}"
                        Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                    <TextBlock VerticalAlignment="Center" Text="Segmentation Model (Optional)" />
                    <controls:BetterDownloadableComboBox
                        Margin="4,4,4,8"
                        Padding="8,6,4,6"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding ClientManager.UltralyticsModels}"
                        SelectedItem="{Binding SegmModel}"
                        Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                    <!--  SAM Model  -->
                    <TextBlock Margin="0,8,0,0" Text="SAM Model (Optional)" />
                    <controls:BetterDownloadableComboBox
                        Margin="4,4,4,8"
                        Padding="8,6,4,6"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding ClientManager.SamModels}"
                        SelectedItem="{Binding SamModel}"
                        Theme="{StaticResource BetterComboBoxHybridModelTheme}" />

                    <avalonia:SpacedGrid
                        Margin="0,8,0,0"
                        ColumnDefinitions="Auto, *"
                        RowDefinitions="Auto, Auto, Auto, Auto">
                        <!--  Sampler  -->
                        <TextBlock
                            Margin="4,0,4,8"
                            VerticalAlignment="Center"
                            IsVisible="{Binding IsSamplerSelectionEnabled}"
                            Text="{x:Static lang:Resources.Label_Sampler}" />
                        <ui:FAComboBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,0,4,8"
                            HorizontalAlignment="Stretch"
                            DisplayMemberBinding="{Binding DisplayName}"
                            IsVisible="{Binding IsSamplerSelectionEnabled}"
                            ItemsSource="{Binding ClientManager.Samplers}"
                            SelectedItem="{Binding Sampler}" />

                        <!--  Scheduler  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="4,0,4,8"
                            VerticalAlignment="Center"
                            IsVisible="{Binding IsSchedulerSelectionEnabled}"
                            Text="{x:Static lang:Resources.Label_Scheduler}" />
                        <ui:FAComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="4,0,4,8"
                            HorizontalAlignment="Stretch"
                            DisplayMemberBinding="{Binding DisplayName}"
                            IsVisible="{Binding IsSchedulerSelectionEnabled}"
                            ItemsSource="{Binding AvailableSchedulers}"
                            SelectedItem="{Binding Scheduler}" />

                        <!--  Steps  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="4,0,4,8"
                            VerticalAlignment="Center"
                            IsVisible="{Binding IsStepsEnabled}"
                            Text="{x:Static lang:Resources.Label_Steps}" />
                        <ui:NumberBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="4,0,4,8"
                            HorizontalAlignment="Stretch"
                            IsVisible="{Binding IsStepsEnabled}"
                            Maximum="10000"
                            Minimum="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Steps}" />

                        <!--  CFG  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="4,0,4,8"
                            VerticalAlignment="Center"
                            IsVisible="{Binding IsCfgScaleEnabled}"
                            Text="{x:Static lang:Resources.Label_CFGScale}" />
                        <ui:NumberBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="4,0,4,8"
                            HorizontalAlignment="Stretch"
                            IsVisible="{Binding IsCfgScaleEnabled}"
                            Maximum="100"
                            Minimum="0"
                            SimpleNumberFormat="F2"
                            SmallChange="0.25"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Cfg}" />
                    </avalonia:SpacedGrid>

                    <controls:SeedCard
                        Margin="4,0,4,8"
                        Background="Gray"
                        DataContext="{Binding SeedCardViewModel}"
                        IsVisible="{Binding !$parent[StackPanel].((vmInference:FaceDetailerViewModel)DataContext).InheritSeed, TargetNullValue=False, FallbackValue=False}" />

                    <Separator Margin="8,16" Background="#DDDDDD" />

                    <avalonia:SpacedGrid
                        Margin="0,8,0,16"
                        ColumnDefinitions="*, *"
                        RowDefinitions="Auto, Auto">
                        <!--  Guide Size For  -->
                        <TextBlock Margin="4,0,4,0" Text="Guide Size For" />
                        <ToggleSwitch
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="8,0,4,8"
                            IsChecked="{Binding GuideSizeFor}"
                            OffContent="Crop Region"
                            OnContent="BBox" />

                        <!--  Force Inpaint  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,0,4,0"
                            VerticalAlignment="Center"
                            Text="Force Inpaint" />
                        <ToggleSwitch
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="8,0,4,0"
                            HorizontalAlignment="Stretch"
                            IsChecked="{Binding ForceInpaint}" />
                    </avalonia:SpacedGrid>

                    <!--  Guide Size  -->
                    <avalonia:SpacedGrid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                        <TextBlock
                            Margin="4,0,4,2"
                            VerticalAlignment="Center"
                            Text="Guide Size" />
                        <ui:NumberBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,4,4,4"
                            HorizontalAlignment="Stretch"
                            Minimum="64"
                            SmallChange="64"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding GuideSize}" />

                        <!--  Max Size  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="4,0,4,2"
                            VerticalAlignment="Center"
                            Text="{x:Static lang:Resources.Label_MaxSize}" />
                        <ui:NumberBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="4,4,4,4"
                            HorizontalAlignment="Stretch"
                            Minimum="64"
                            SmallChange="64"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding MaxSize}" />

                        <!--  BBox Threshold  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="4,0,4,2"
                            VerticalAlignment="Center"
                            Text="Threshold" />
                        <ui:NumberBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="4,4,4,4"
                            HorizontalAlignment="Stretch"
                            Maximum="1"
                            Minimum="0"
                            SimpleNumberFormat="F2"
                            SmallChange="0.01"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding BboxThreshold}" />

                        <!--  BBox Dilation  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="4,0,4,2"
                            VerticalAlignment="Center"
                            Text="Dilation" />
                        <ui:NumberBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="4,4,4,4"
                            HorizontalAlignment="Stretch"
                            Maximum="512"
                            Minimum="-512"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding BboxDilation}" />

                        <!--  BBox Crop Factor  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="4,0,4,2"
                            VerticalAlignment="Center"
                            Text="Crop Factor" />
                        <ui:NumberBox
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="4,4,4,4"
                            HorizontalAlignment="Stretch"
                            Maximum="10"
                            Minimum="1"
                            SimpleNumberFormat="F2"
                            SmallChange="0.1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding BboxCropFactor}" />
                    </avalonia:SpacedGrid>

                    <Separator Margin="8,20,8,8" Background="#DDDDDD" />

                    <!--  Noise Mask  -->
                    <TextBlock
                        Margin="4,0,4,0"
                        VerticalAlignment="Center"
                        Text="Noise Mask" />
                    <ToggleSwitch
                        Margin="8,0,4,0"
                        HorizontalAlignment="Stretch"
                        IsChecked="{Binding NoiseMask}" />

                    <avalonia:SpacedGrid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto">

                        <!--  Denoise  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="4,0,4,2"
                            VerticalAlignment="Center"
                            Text="Denoise" />
                        <ui:NumberBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,4,4,4"
                            HorizontalAlignment="Stretch"
                            Maximum="1"
                            Minimum="0"
                            SimpleNumberFormat="F2"
                            SmallChange="0.01"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Denoise}" />

                        <Slider
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="4,-12,4,0"
                            IsSnapToTickEnabled="True"
                            Maximum="1"
                            Minimum="0"
                            SmallChange="0.01"
                            TickFrequency="0.01"
                            Value="{Binding Denoise}" />

                        <!--  Feather  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="4,0,4,4"
                            VerticalAlignment="Center"
                            Text="Feather" />
                        <ui:NumberBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="4,4,4,8"
                            HorizontalAlignment="Stretch"
                            Maximum="100"
                            Minimum="0"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Feather}" />
                        <Slider
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="4,-12,4,0"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="0"
                            SmallChange="1"
                            TickFrequency="1"
                            Value="{Binding Feather}" />
                    </avalonia:SpacedGrid>

                    <Separator Margin="8,16" Background="#DDDDDD" />

                    <!--  SAM Detection Hint  -->
                    <TextBlock Margin="4,0,4,4" Text="SAM Detection Hint" />
                    <ComboBox
                        Margin="4,4,4,8"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding SamDetectionHints}"
                        SelectedItem="{Binding SamDetectionHint}" />

                    <!--  SAM Dilation  -->
                    <TextBlock Margin="4,0,4,4" Text="SAM Dilation" />
                    <ui:NumberBox
                        Margin="4,4,4,8"
                        HorizontalAlignment="Stretch"
                        Maximum="512"
                        Minimum="-512"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline"
                        Value="{Binding SamDilation}" />

                    <!--  SAM Threshold  -->
                    <TextBlock Margin="4,0,4,4" Text="SAM Threshold" />
                    <ui:NumberBox
                        Margin="4,4,4,8"
                        HorizontalAlignment="Stretch"
                        Maximum="1"
                        Minimum="0"
                        SimpleNumberFormat="F2"
                        SmallChange="0.01"
                        SpinButtonPlacementMode="Inline"
                        Value="{Binding SamThreshold}" />

                    <!--  SAM BBox Expansion  -->
                    <TextBlock Margin="4,0,4,4" Text="SAM BBox Expansion" />
                    <ui:NumberBox
                        Margin="4,4,4,8"
                        HorizontalAlignment="Stretch"
                        Maximum="1000"
                        Minimum="0"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline"
                        Value="{Binding SamBboxExpansion}" />

                    <!--  SAM Mask Hint Threshold  -->
                    <TextBlock Margin="4,0,4,4" Text="SAM Mask Hint Threshold" />
                    <ui:NumberBox
                        Margin="4,4,4,8"
                        HorizontalAlignment="Stretch"
                        Maximum="1"
                        Minimum="0"
                        SimpleNumberFormat="F2"
                        SmallChange="0.01"
                        SpinButtonPlacementMode="Inline"
                        Value="{Binding SamMaskHintThreshold}" />

                    <!--  SAM Mask Hint Use Negative  -->
                    <TextBlock Margin="4,0,4,4" Text="SAM Mask Hint Use Negative" />
                    <ComboBox
                        Margin="4,4,4,8"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding SamMaskHintUseNegatives}"
                        SelectedItem="{Binding SamMaskHintUseNegative}" />

                    <!--  Drop Size  -->
                    <avalonia:SpacedGrid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                        <TextBlock
                            Margin="4,0,4,4"
                            VerticalAlignment="Center"
                            Text="Drop Size" />
                        <ui:NumberBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,4,4,8"
                            HorizontalAlignment="Stretch"
                            Maximum="16384"
                            Minimum="1"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding DropSize}" />

                        <!--  Cycle  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="4,0,4,4"
                            VerticalAlignment="Center"
                            Text="Cycle" />
                        <ui:NumberBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="4,4,4,8"
                            HorizontalAlignment="Stretch"
                            Maximum="10"
                            Minimum="1"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding Cycle}" />
                    </avalonia:SpacedGrid>

                    <Separator Margin="8,16" Background="#DDDDDD" />

                    <!--  Use Separate Prompt  -->
                    <TextBlock Margin="4,0,4,4" Text="{x:Static lang:Resources.Label_UseSeparatePrompt}" />
                    <ToggleSwitch
                        Margin="8,0,4,8"
                        HorizontalAlignment="Stretch"
                        IsChecked="{Binding UseSeparatePrompt}" />

                    <!--  Positive Prompt  -->
                    <controls:PromptCard DataContext="{Binding PromptCardViewModel}" IsVisible="{Binding $parent[StackPanel].((vmInference:FaceDetailerViewModel)DataContext).UseSeparatePrompt, TargetNullValue=False, FallbackValue=False}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
