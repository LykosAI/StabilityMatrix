<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
    xmlns:controls="using:StabilityMatrix.Avalonia.Controls"
    xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Runtime"
    xmlns:generic1="clr-namespace:System.Collections.Generic;assembly=System.Collections"
    xmlns:input="clr-namespace:FluentAvalonia.UI.Input;assembly=FluentAvalonia"
    xmlns:lang="clr-namespace:StabilityMatrix.Avalonia.Languages"
    xmlns:mocks="clr-namespace:StabilityMatrix.Avalonia.DesignData"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:vmInference="using:StabilityMatrix.Avalonia.ViewModels.Inference"
    x:DataType="vmInference:SamplerCardViewModel">
    <Design.PreviewWith>
        <StackPanel MinWidth="350" Spacing="16">
            <controls:SamplerCard DataContext="{x:Static mocks:DesignData.SamplerCardViewModel}" />
            <controls:SamplerCard DataContext="{x:Static mocks:DesignData.SamplerCardViewModelScaleMode}" />
            <controls:SamplerCard DataContext="{x:Static mocks:DesignData.SamplerCardViewModelRefinerMode}" />
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="controls|SamplerCard">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <controls:Card HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                    <controls:Card.Resources>
                        <input:StandardUICommand x:Key="SetResolutionCommand" Command="{Binding SetResolutionCommand}" />
                    </controls:Card.Resources>
                    <StackPanel HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Spacing="8">
                        <Grid ColumnDefinitions="Auto,5,*" RowDefinitions="*,*,*,*,*,*,*">
                            <!--  Sampler  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsSamplerSelectionEnabled}"
                                Text="{x:Static lang:Resources.Label_Sampler}" />
                            <controls:BetterComboBox
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="8,0,0,8"
                                HorizontalAlignment="Stretch"
                                DisplayMemberBinding="{Binding DisplayName}"
                                IsVisible="{Binding IsSamplerSelectionEnabled}"
                                ItemsSource="{Binding ClientManager.Samplers}"
                                SelectedItem="{Binding SelectedSampler}" />
                            <!--  Scheduler  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsSchedulerSelectionEnabled}"
                                Text="{x:Static lang:Resources.Label_Scheduler}" />
                            <ui:FAComboBox
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="8,0,0,8"
                                HorizontalAlignment="Stretch"
                                DisplayMemberBinding="{Binding DisplayName}"
                                IsVisible="{Binding IsSchedulerSelectionEnabled}"
                                ItemsSource="{Binding ClientManager.Schedulers}"
                                SelectedItem="{Binding SelectedScheduler}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsModelTypeSelectionEnabled}"
                                Text="{x:Static lang:Resources.Label_ModelType}" />
                            <ui:FAComboBox
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="8,0,0,8"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding IsModelTypeSelectionEnabled}"
                                ItemsSource="{Binding ModelTypes}"
                                SelectedItem="{Binding SelectedModelType}" />

                            <!--  Steps (Normal)  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                IsVisible="{Binding !IsRefinerStepsEnabled}"
                                Text="{x:Static lang:Resources.Label_Steps}" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsRefinerStepsEnabled}"
                                Text="{x:Static lang:Resources.Label_StepsBase}" />
                            <ui:NumberBox
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="8,0,0,8"
                                HorizontalAlignment="Stretch"
                                SelectionHighlightColor="Transparent"
                                SpinButtonPlacementMode="Inline"
                                Value="{Binding Steps}" />

                            <!--  Steps (Refiner)  -->
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,0,0,8"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsRefinerStepsEnabled}"
                                Text="{x:Static lang:Resources.Label_StepsRefiner}" />
                            <ui:NumberBox
                                Grid.Row="4"
                                Grid.Column="2"
                                Margin="8,0,0,8"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding IsRefinerStepsEnabled}"
                                SelectionHighlightColor="Transparent"
                                SpinButtonPlacementMode="Inline"
                                Value="{Binding RefinerSteps}" />

                            <!--  CFG Scale  -->
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsCfgScaleEnabled}"
                                Text="{x:Static lang:Resources.Label_CFGScale}" />
                            <ui:NumberBox
                                Grid.Row="5"
                                Grid.Column="2"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding IsCfgScaleEnabled}"
                                SelectionHighlightColor="Transparent"
                                SimpleNumberFormat="F2"
                                SmallChange="0.25"
                                SpinButtonPlacementMode="Inline"
                                Value="{Binding CfgScale}" />

                            <!--  Length (Frame Count)  -->
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="0,8,0,0"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IsLengthEnabled}"
                                Text="{x:Static lang:Resources.Label_Frames}" />
                            <ui:NumberBox
                                Grid.Row="6"
                                Grid.Column="2"
                                Margin="8,8,0,0"
                                HorizontalAlignment="Stretch"
                                IsVisible="{Binding IsLengthEnabled}"
                                SelectionHighlightColor="Transparent"
                                SmallChange="4"
                                SpinButtonPlacementMode="Inline"
                                Value="{Binding Length}" />
                        </Grid>

                        <StackPanel>
                            <!--  Denoise Strength  -->
                            <StackPanel>
                                <StackPanel.IsVisible>
                                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                        <Binding Path="IsDenoiseStrengthEnabled" />
                                        <Binding Path="IsDenoiseStrengthTempEnabled" />
                                    </MultiBinding>
                                </StackPanel.IsVisible>
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Label_DenoisingStrength}" />
                                    <ui:NumberBox
                                        Grid.Column="1"
                                        MinWidth="70"
                                        Margin="4,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        SimpleNumberFormat="F2"
                                        SmallChange="0.01"
                                        SpinButtonPlacementMode="Compact"
                                        ValidationMode="InvalidInputOverwritten"
                                        Value="{Binding DenoiseStrength}" />
                                </Grid>
                                <Slider
                                    Margin="0,0,0,-4"
                                    Maximum="1"
                                    Minimum="0"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    Value="{Binding DenoiseStrength}" />
                            </StackPanel>

                            <!--  Dimensions (Absolute)  -->
                            <Grid
                                Margin="0,8,0,0"
                                ColumnDefinitions="*,Auto,*,Auto"
                                IsVisible="{Binding IsDimensionsEnabled}"
                                RowDefinitions="Auto,*,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,4,4"
                                    Text="{x:Static lang:Resources.Label_Width}" />
                                <ui:NumberBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    HorizontalAlignment="Stretch"
                                    PlaceholderText="128"
                                    SmallChange="{Binding DimensionStepChange}"
                                    SpinButtonPlacementMode="Compact"
                                    ValidationMode="InvalidInputOverwritten"
                                    Value="{Binding Width}" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="4,0,0,4"
                                    Text="{x:Static lang:Resources.Label_Height}" />
                                <ui:NumberBox
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="4,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    PlaceholderText="128"
                                    SmallChange="{Binding DimensionStepChange}"
                                    SpinButtonPlacementMode="Compact"
                                    ValidationMode="InvalidInputOverwritten"
                                    Value="{Binding Height}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Padding="4"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Command="{Binding SwapDimensionsCommand}"
                                    ToolTip.Tip="Swap Image Dimensions">
                                    <ui:SymbolIcon
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Symbol="RepeatAll" />
                                </Button>

                                <Button
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="4,0,0,0"
                                    Padding="4"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    ToolTip.Tip="Select from Favorite Dimensions">
                                    <avalonia:Icon
                                        Margin="2,0"
                                        FontSize="18"
                                        Value="fa-solid fa-table-cells-large" />
                                    <Button.Flyout>
                                        <controls:BetterFlyout Placement="Bottom">
                                            <Grid RowDefinitions="*,Auto">
                                                <Button
                                                    Grid.Row="1"
                                                    Margin="0,16,0,0"
                                                    Padding="4"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    VerticalContentAlignment="Center"
                                                    Command="{Binding SaveDimensionsToFavoritesCommand}"
                                                    ToolTip.Tip="Save Dimensions to Favorites">
                                                    <StackPanel Orientation="Horizontal">
                                                        <avalonia:Icon
                                                            Margin="2,0"
                                                            FontSize="18"
                                                            Value="fa-solid fa-floppy-disk" />
                                                        <TextBlock
                                                            Margin="4,0,0,0"
                                                            HorizontalAlignment="Center"
                                                            FontSize="14"
                                                            Text="Save Current Dimensions"
                                                            TextAlignment="Center" />
                                                    </StackPanel>
                                                </Button>
                                                <ItemsRepeater
                                                    Grid.Row="0"
                                                    MaxWidth="300"
                                                    ItemsSource="{Binding GroupedResolutionsByAspectRatio}">
                                                    <ItemsRepeater.Layout>
                                                        <StackLayout Orientation="Vertical" />
                                                    </ItemsRepeater.Layout>
                                                    <ItemsRepeater.ItemTemplate>
                                                        <DataTemplate>
                                                            <DataTemplate.DataType>
                                                                <x:Type x:TypeArguments="x:String, generic1:List(system:String)" TypeName="generic:KeyValuePair" />
                                                            </DataTemplate.DataType>
                                                            <Grid MaxWidth="300" RowDefinitions="Auto,*">
                                                                <TextBlock
                                                                    Margin="0,8,0,4"
                                                                    FontSize="16"
                                                                    FontWeight="Light"
                                                                    Text="{Binding Key}" />
                                                                <ItemsRepeater Grid.Row="1" ItemsSource="{Binding Value}">
                                                                    <ItemsRepeater.Layout>
                                                                        <WrapLayout
                                                                            HorizontalSpacing="8"
                                                                            Orientation="Horizontal"
                                                                            VerticalSpacing="8" />
                                                                    </ItemsRepeater.Layout>
                                                                    <ItemsRepeater.ItemTemplate>
                                                                        <DataTemplate DataType="{x:Type system:String}">
                                                                            <Button
                                                                                HorizontalAlignment="Stretch"
                                                                                Classes="transparent"
                                                                                Command="{StaticResource SetResolutionCommand}"
                                                                                CommandParameter="{Binding}"
                                                                                Content="{Binding}" />
                                                                        </DataTemplate>
                                                                    </ItemsRepeater.ItemTemplate>
                                                                </ItemsRepeater>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsRepeater.ItemTemplate>
                                                </ItemsRepeater>
                                            </Grid>

                                        </controls:BetterFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>

                            <!--  Conditioning Modules  -->
                            <Grid
                                Margin="0,8,0,0"
                                ColumnDefinitions="*"
                                IsVisible="{Binding EnableAddons}"
                                RowDefinitions="*">
                                <controls:StackEditableCard DataContext="{Binding ModulesCardViewModel}" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </controls:Card>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
